<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.motel.app.controller.LiberaAptoController"
            style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);">

    <center>
        <VBox alignment="CENTER" spacing="25" prefHeight="500" prefWidth="600"
              style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 30;">

            <!-- LOGO -->
            <ImageView fitHeight="120" fitWidth="260" preserveRatio="true">
                <image>
                    <Image url="@/img/logo.png"/>
                </image>
            </ImageView>

            <!-- TÍTULO -->
            <Label text="Libera Aptos"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #c00000;" />

            <!-- CAMPOS -->
            <GridPane hgap="15" vgap="15">
                <Label text="Número do Apto:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="cboNumeroApto" prefWidth="200" GridPane.columnIndex="1"/>

                <Label text="Camareira:" style="-fx-font-size: 16px; -fx-font-weight: bold;" GridPane.rowIndex="1"/>
                <ComboBox fx:id="cboCamareira" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Senha de Acesso:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #c00000;" GridPane.rowIndex="2"/>
                <PasswordField fx:id="txtSenha" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>

            <!-- BOTÕES -->
            <HBox alignment="CENTER" spacing="30">
                <Button fx:id="btnSair" onAction="#handleSair"
                        text="Sair"
                        prefHeight="45" prefWidth="130"
                        style="-fx-background-color: #f4cccc; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />

                <Button fx:id="btnCancelar" onAction="#handleCancelar"
                        text="Cancelar"
                        prefHeight="45" prefWidth="130"
                        style="-fx-background-color: #fce5cd; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />

                <Button fx:id="btnOk" onAction="#handleOk"
                        text="Ok"
                        prefHeight="45" prefWidth="130"
                        style="-fx-background-color: #d9ead3; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
