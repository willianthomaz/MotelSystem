<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.motel.app.controller.FazerLimpezaController"
            style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);">

    <center>
        <VBox alignment="CENTER" spacing="25" prefHeight="400" prefWidth="500"
              style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 30;">

            <!-- LOGO -->
            <ImageView fitHeight="120" fitWidth="250" preserveRatio="true">
                <image>
                    <Image url="@/img/logo.png"/>
                </image>
            </ImageView>

            <!-- TÍTULO -->
            <Label text="Fazer Limpeza"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #dc3545;" />

            <!-- SELEÇÃO DO APTO -->
            <HBox alignment="CENTER" spacing="20">
                <Label text="Número do Apto:"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #343a40;" />
                <ComboBox fx:id="comboApto"
                          prefWidth="200"
                          style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>

            <!-- BOTÕES -->
            <HBox alignment="CENTER" spacing="30">
                <Button fx:id="btnSair" onAction="#onSairClick"
                        text="Sair"
                        prefHeight="45" prefWidth="120"
                        style="-fx-background-color: #f4cccc; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />

                <Button fx:id="btnCancelar" onAction="#onCancelarClick"
                        text="Cancelar"
                        prefHeight="45" prefWidth="120"
                        style="-fx-background-color: #fff2cc; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />

                <Button fx:id="btnOk" onAction="#onOkClick"
                        text="Ok"
                        prefHeight="45" prefWidth="120"
                        style="-fx-background-color: #d9ead3; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
