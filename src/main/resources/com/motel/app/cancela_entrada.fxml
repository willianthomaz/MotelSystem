<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.motel.app.controller.CancelaEntradaController">

    <center>
        <VBox alignment="CENTER" prefHeight="500" prefWidth="600" spacing="25" style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 30;">

            <!-- LOGO -->
            <ImageView fitHeight="150" fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/img/logo.png" />
                </image>
            </ImageView>

            <!-- TÍTULO -->
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #343a40;" text="Cancela Entrada" />

            <!-- COMBO -->
            <HBox alignment="CENTER" spacing="20">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Número do Apto:" />
                <ComboBox fx:id="cboApto" prefWidth="200" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>

            <!-- BOTÕES -->
            <HBox alignment="CENTER" spacing="30">

                <Button fx:id="btnSair" onAction="#onSairClick" prefHeight="45" prefWidth="130" style="-fx-background-color: #f4cccc; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Sair" />

                <Button fx:id="btnCancela" onAction="#onCancelaClick" prefHeight="45" prefWidth="130" style="-fx-background-color: #fce5cd; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Cancela" />

                <Button fx:id="btnOk" onAction="#onOkClick" prefHeight="45" prefWidth="130" style="-fx-background-color: #d9ead3; -fx-text-fill: black; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Ok" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
