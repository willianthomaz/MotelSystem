<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.motel.app.controller.CadastroPessoasController"
            style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);">

    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 30;">

            <!-- LOGO -->
            <ImageView fitHeight="150" fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/img/logo.png" />
                </image>
            </ImageView>

            <!-- TÍTULO -->
            <Label text="Cadastro de Pessoas"
                   style="-fx-font-size: 26px; -fx-text-fill: #b30000; -fx-font-weight: bold;" />

            <!-- FORMULÁRIO -->
            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <Label text="Nome do Funcionário:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-font-size: 16px;" />
                <TextField fx:id="txtUsuario" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Nome Completo:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-font-size: 16px;" />
                <TextField fx:id="txtNomeCompleto" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Cargo:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       style="-fx-font-size: 16px;" />
                <TextField fx:id="txtCargo" prefWidth="250" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Senha de Acesso:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                       style="-fx-font-size: 16px;" />
                <PasswordField fx:id="txtSenha" prefWidth="250" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </GridPane>

            <!-- BOTÕES -->
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0 0 0;">
                <Button fx:id="btnSair" text="Sair"
                        onAction="#onSairClick"
                        style="-fx-background-color: #f4cccc; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />

                <Button fx:id="btnCancelar" text="Cancelar"
                        onAction="#onCancelarClick"
                        style="-fx-background-color: #fce5cd; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />

                <Button fx:id="btnExcluir" text="Excluir"
                        onAction="#onExcluirClick"
                        style="-fx-background-color: #d9d2e9; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />

                <Button fx:id="btnAlterar" text="Alterar"
                        onAction="#onAlterarClick"
                        style="-fx-background-color: #d0e0e3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />

                <Button fx:id="btnIncluir" text="Incluir"
                        onAction="#onIncluirClick"
                        style="-fx-background-color: #d9ead3; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
