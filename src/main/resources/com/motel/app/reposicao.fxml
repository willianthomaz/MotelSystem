<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.motel.app.controller.ReposicaoController">
    <center>
        <VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="20" style="-fx-padding: 30;">
            <ImageView fitHeight="150" fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/img/logo.png" />
                </image>
            </ImageView>
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #dc3545;" text="Reposição de Bar" />
            <HBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Produto:" />
                <TextField fx:id="txtProduto" prefHeight="25.0" prefWidth="186.0" />
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Quantidade:" />
                <TextField fx:id="txtQuantidade" prefWidth="80" />
                <Button onAction="#adicionarItem" text="Adicionar" />
            </HBox>
            <TableView fx:id="tabelaItens" prefHeight="200" prefWidth="500">
                <columns>
                    <TableColumn fx:id="colProduto" prefWidth="300" text="Produto" />
                    <TableColumn fx:id="colQuantidade" prefWidth="200" text="Quantidade" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
